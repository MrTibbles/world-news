{
  "name": "world-news",
  "version": "0.0.1",
  "description": "Simple app to view news in a given country",
  "main": "src/server/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "scripts": {
    "#COMMENT": "FOR SOME REASON ESLINT IS NOT LIKING NESTED CONFIG FILES... INVESTIGATE WHEN HAVE TIME",
    "lint": "prettier --write \"src/**/*.?(js|ts|tsx)\" && eslint --fix \"src/client/*.js\" && eslint --fix \"src/server/*.js\"",
    "dev:client": "webpack-dev-server",
    "dev:server": "node src/server/index.js",
    "start:dev": "npm-run-all --parallel dev:*",
    "test": "npm t"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "react",
    "apollo-server",
    "graphql"
  ],
  "author": "@mrtibbles",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server": "^2.8.1",
    "graphql": "^14.4.2",
    "linaria": "^1.4.0-alpha.1",
    "normalize.css": "^8.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-share": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@raddad/eslint-config": "0.0.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.1.4",
    "css-loader": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.2",
    "mini-css-extract-plugin": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
